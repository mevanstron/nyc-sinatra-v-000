<h1>New Figure</h1>
<form action="/figures" method="post">
  <label for="name">Name: </label><input id="name" type="text" name="figure[name]" value="">

  <br></br>

  <label for="">Titles: </label>

  <br></br>

  <% @titles.each do |title| %>
  <input id="" type="checkbox" name="titles[]" value="<%= title.name %>"><%= title.name %>
  <br />
  <% end %>
  <label for="title">New Title: </label><input type="text" name="title" value="">
  <br></br>

  <label for="">Landmarks: </label>

  <br></br>

  <% @landmarks.each do |landmark| %>
  <input id="" type="checkbox" name="landmarks[]" value="<%= landmark.name %>"><%= landmark.name %>
  <br />
  <% end %>

  <br></br>

</form>
